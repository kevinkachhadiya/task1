@model  task1.Models.UserData

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-lg rounded" style="width: 22rem;">
        <img src="/Uploads/@Model.ImagePath" class="card-img-top rounded-circle mx-auto d-block mt-3"
             alt="Profile Image" style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #fff;">

        <div class="card-body text-center">
            <h5 class="card-title fw-bold">@Model.FirstName @Model.LastName</h5>
            <p class="card-text text-muted"><i class="fas fa-envelope"></i> @Model.Email</p>
        </div>

        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>📞 Mobile:</strong> @Model.MobileNo</li>
            <li class="list-group-item"><strong>👤 Gender:</strong> @Model.Gender</li>
            <li class="list-group-item"><strong>🎂 DOB:</strong> @Model.Dob</li>
            <li class="list-group-item"><strong>🏠 Address:</strong> @Model.Address</li>
            <li class="list-group-item"><strong>🌍 Country:</strong> @Model.SelectedCountry</li>
            <li class="list-group-item"><strong>🏙️ State:</strong> @Model.selectedState</li>
            <li class="list-group-item"><strong>🏡 City:</strong> @Model.selectedCity</li>
        </ul>

        <div class="card-footer text-center bg-light">
            <a href="@Url.Action("Edit", "Home", new { id = Model.user_id })" class="btn btn-primary btn-sm">
                <i class="fas fa-edit"></i> Edit Profile
            </a>

            <a href="@Url.Action("Delete", "Home", new { id = Model.user_id })" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
</div>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>