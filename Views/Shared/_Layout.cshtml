    }

    .dark label, .dark .col-md-3, .dark .cnf {
        color: #E0E0E0; /* Light text for labels */
    }

    .dark .text-danger {
        background-color: #E0E0FF; /* Light blue background */
    }

    .dark #editUserModalLabel {
        color: white;
        font-size: 20px;
    }

    /* Dark mode styles for cards */
    .dark .card {
        background-color: #2D2D2D; /* Dark gray background for the card */
        color: #E0E0E0; /* Light text color for the card */
        border: 1px solid #404040; /* Dark border for the card */
    }

        .dark .card p {
            background-color: #3A3A3A; /* Slightly lighter gray for paragraphs */
            color: #FFFFFF; /* Pure white text for paragraphs */
            padding: 8px; /* Add padding for better readability */
            border-radius: 4px; /* Rounded corners for paragraphs */
        }

        .dark .card li {
            background-color: #4A4A4A; /* Medium gray for list items */
            color: #E0E0E0; /* Light text color for list items */
            margin: 4px 0; /* Add spacing between list items */
            padding: 8px; /* Add padding for better readability */
            border-radius: 4px; /* Rounded corners for list items */
        }

    .dark #detail {
        background-color: inherit; /* Inherit background color from parent */
        color: #E0E0E0; /* Light text color for details */
    }

    .dark .card ul {
        margin: 5px;
    }

    .dark #confirmModalLabel {
        color: black;
    }
    .container1 {
        overflow-y: scroll;
        
    }
  
</style>

<script>
    const darkModeToggle = document.getElementById('darkModeToggle');
    const navbarCollapse = document.getElementById('navbarSupportedContent');
    const tdm = document.getElementById('tdm');
    const rootElement = document.documentElement;

    function toggleDarkMode() {
        if (darkModeToggle.checked) {
            rootElement.classList.add('dark');
            localStorage.setItem('theme', 'dark');
            tdm.innerText = "Dark Mode"

        }
        else {

            localStorage.setItem('theme', 'light');
            rootElement.classList.remove('dark');
            tdm.innerText = "Light Mode"
        }
    }

    darkModeToggle.addEventListener('change', toggleDarkMode);

    const savedMode = localStorage.getItem('theme');
    if (savedMode === 'dark') {
        rootElement.classList.add('dark');
        darkModeToggle.checked = true;
        tdm.innerText = "Dark Mode"
    } else if (savedMode === 'light') {
        rootElement.classList.remove('dark');
        tdm.innerText = "Light Mode"
        darkModeToggle.checked = false;
    }



</script>